<!------------ start summarize_en_book ---------------->
<div class="table">
    <div class="container">

        @{
            var Path = $"/EnglishBook/DownloadFile?path={@ViewBag.EfilePath}";
        }

        <h1><span>English</span> Summarization book <a href=@Path method="Get">download</a></></h1>
        <table>
            <thead>
                <tr>
                    <th>title</th>
                    <th>summarize</th>
                </tr>
            </thead>
            <tbody>
                @{

                    foreach (var item in @ViewBag.ESUM)
                    {
                        <tr>
                            <td> @item.chapter</td>
                            <td> @item.sum</td>
                        </tr>
                    }
                }
            </tbody>
            <tfoot>
            </tfoot>
        </table>
    </div>
</div>
<!------------ end summarize_en_book ------------------>