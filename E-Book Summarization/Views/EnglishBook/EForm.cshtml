<!----------- start english_summarize -------------->
<link href="~/AppStyles/CSS/english_summ.css?v=1" rel="stylesheet">
<div class="form">
    <div class="container">
        <div class="box">
            <form method="post" enctype="multipart/form-data">
                <h2>summarize English book</h2>
                <div class="inputBox">
                    <input name="BookName" id="BookName" type="text" required="required" placeholder="Book Name">
                </div>
                <div class="inputBox">
                    <input name="percentage" id="percentage" type="number" required="required" min="1" max="100" placeholder="percentage of summary">
                </div>
                <div class="inputBox">
                    <input type="file" required name="book" title="" id="book" class="custom-file-input">
                </div>
                <div>
                    <button type="submit" style="color:white;">send</button>
                    @{
                        if (ViewBag.Message != null)
                        {
                            <p>@ViewBag.Message</p>
                        }

                    }
                </div>

            </form>
        </div>
    </div>
</div>
<!----------- end english_summarize ---------------->
