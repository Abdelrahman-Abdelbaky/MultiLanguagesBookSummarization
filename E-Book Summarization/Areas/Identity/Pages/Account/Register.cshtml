@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}
<link href="~/AppStyles/CSS/sigin.css" rel="stylesheet">

<div class="wrapper">
    <div class="container">
        <div class="bg-animate" id="bg-animate"></div>
        <div class="curved" id="curved"></div>

        <div class="form-wrapper sigin-in">
            <form action="">
                <h2>Sign Up</h2>
                <div asp-validation-summary="ModelOnly" class="text-danger" style="color:#de0000;"></div>

                @*<div class="input-box">
                <input type="text" required>
                <label>Username</label>
                </div>*@
                <div class="input-box">
                    <input type="email" asp-for="Input.Email" autocomplete="username" aria-required="true" />
                    <label asp-for="Input.Email"></label>
                    <span asp-validation-for="Input.Email" class="text-danger" style="color:#de0000;"></span>
                </div>

                @*<div class="input-box">
                <input type="password" required>
                <label>password</label>
                </div>*@
                <div class="input-box">
                    <input type="password" asp-for="Input.Password" autocomplete="current-password" aria-required="true" />
                    <label asp-for="Input.Password"></label>
                    <span asp-validation-for="Input.Password" class="text-danger" style="color:#de0000;"></span>
                </div>
                
                <div class="input-box">
                    <input type="password" asp-for="Input.ConfirmPassword" autocomplete="current-password" aria-required="true" />
                    <label asp-for="Input.ConfirmPassword" style="padding-left: 58px;"></label>
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger" style="color:#de0000;"></span>
                </div>

                @*<button type="submit">Sign in</button>*@
                <button type="submit">Sign Up</button>

                
            </form>
            <div >
                <div class="sign-link">
                    <p>Don't have an account ?<a href="/Identity/Account/Register" onclick="activeSignUp()">Sign up</a></p>
                </div>
                <div class="social-platform">
                    <p>Or sign in with </p>
                    <div class="social-icons">
                        @{
                            if ((Model.ExternalLogins?.Count ?? 0) == 0)
                            {
                                <div>
                                    <p>
                                        There are no external authentication services configured. See this <a href="https://go.microsoft.com/fwlink/?LinkID=532715">
                                            article
                                            about setting up this ASP.NET application to support logging in via external services
                                        </a>.
                                    </p>
                                </div>
                            }
                            else
                            {
                                <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="form-horizontal">
                                    <div>
                                        <p>
                                            @foreach (var provider in Model.ExternalLogins!)
                                            {
                                                <button type="submit" name="provider" value="@provider.Name" title="Log in using your @provider.DisplayName account" style="padding: 0 45px;">
                                                    <i class="fa-brands fa-google"></i>Sign Up with @provider.DisplayName
                                                </button>
                                            }
                                        </p>
                                    </div>
                                </form>
                            }
                        }
                        @*<i class="fa-brands fa-google"></i>
                        <i class="fa-brands fa-facebook"></i>
                        <i class="fa-brands fa-instagram"></i>
                        <i class="fa-brands fa-twitter"></i>*@
                    </div>
                </div>
            </div>
        </div>
      
    </div>
</div>
<div class="colors">
    <span onclick=" changeColor('#976ed7')" class="color" style="--clr:#976ed7;"></span>
    <span onclick=" changeColor('#f67599')" class="color" style="--clr:#f67599;"></span>
    <span onclick=" changeColor('#1db9c3')" class="color" style="--clr:#1db9c3;"></span>
    <span onclick=" changeColor('rgb(0,195,154)')" class="color active" style="--clr:rgb(0,195,154);"></span>
</div>




