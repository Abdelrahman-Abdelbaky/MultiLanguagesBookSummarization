@{
    if (ViewData.TryGetValue("ParentLayout", out var parentLayout) && parentLayout != null)
    {
        Layout = parentLayout.ToString();
    }
    else
    {
        Layout = "/Areas/Identity/Pages/_Layout.cshtml";
    }
}

<style>

    .row {
        display: flex;
        flex-direction: column;
        align-content: center;
        align-items: center;
        justify-content: center;
    }

    .col-md-3 {
        margin-top: 10px;
        padding-bottom: 12px;
    }

    button {
        width: 100%;
        height: 40px;
        background: #fff;
        border-radius: 30px;
        cursor: pointer;
        border: none;
        outline: none;
        font-size: 16px;
        color: #444;
        font-weight: 500;
        margin-top: 16px;
    }
</style>
<div>


    <div class="row">
        <h2>Change your account settings</h2>
        <hr />
        <div class="col-md-3">
            <partial name="_ManageNav" />
        </div>
        <div class="col-md-9">
            @RenderBody()
        </div>
    </div>
</div>

@section Scripts {
    @RenderSection("Scripts", required: false)
}
